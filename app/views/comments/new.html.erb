<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Comment</h1>
        <% if logged_in? %>
          <%= form_with model: @comment do |f| %>
            <div class="form-group">
              <%= f.label :content %>
              <%= f.text_area :content, class: 'form-control' %>

              <%= f.hidden_field :topic_id, :value => @topic_id %>
            </div>
            <%= f.submit 'コメントする', class: 'btn btn-black btn-block' %>
          <% end %>
        <% else %>
          <h1>ログインしてください</h1>
        <% end %>
      </div>
    </div>
  </div>
</div>
